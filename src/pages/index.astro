---
import { Header } from "../components/Header";
import { Hero } from "../components/Home/Hero";
import { Areas } from "../components/Home/Areas";
import { LatestArticles } from "../components/Home/LatestArticles";
import { PopularArticles } from "../components/Home/PopularArticles";
import { Footer } from "../components/Footer";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <Header client:visible />
  <Hero client:visible />
  <Areas client:visible />
  <PopularArticles client:visible />
  <LatestArticles client:visible />
  <div class="bg-isei-footer relative overflow-hidden">
    <div
      class="w-4/12 aspect-square rounded-full bg-[#3753b0] absolute -top-[30rem] left-[12rem] blur-[250px]"
    >
    </div>
    <Footer client:visible />
  </div>
</Layout>
